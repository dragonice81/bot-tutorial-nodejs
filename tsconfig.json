{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
