{
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "indent": ["error", 4],
      "object-curly-spacing": ["error", "never"],
      "max-len": ["error", 180],
      "comma-dangle": ["error", "never"],
      "no-underscore-dangle": ["error", { "allowAfterThis": true }],
      "no-tabs": "off"
    }
  }